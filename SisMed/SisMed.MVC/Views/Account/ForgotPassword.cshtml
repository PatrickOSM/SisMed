@model SisMed.Infra.CrossCutting.Identity.Model.ForgotPasswordViewModel
@{
    ViewBag.Title = "Esqueceu sua senha?";
    Layout = "../Shared/_LayoutLogin.cshtml";
}

<div class="form">
    <section id="loginForm">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "login-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-md-12">
                <img src="~/Images/logo-sismed.png" alt="Logo SisMed" class="img-responsive" style="height: 100%; width: 100%;" />
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12">
                <h4>Preencha seu e-mail</h4>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "E-mail", @style = "width: 100%;" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <button type="submit">Enviar</button>
        }
    </section>
</div>